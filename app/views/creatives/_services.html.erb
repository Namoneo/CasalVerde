<section id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">
              <ul class="nav justify-content-center nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" href="#gallery" role="tab" data-toggle="tab">Gallery</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#features" role="tab" data-toggle="tab">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#map" role="tab" data-toggle="tab">Map</a>
                </li>
              </ul>
            </h2>
            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="gallery">
                  <%= render 'contents/villa' %>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="features">
                  <div class="row">
                      <div class="col-lg-4 col-md-6 text-center">
                          <div class="service-box">
                            <a href="/contents">
                              <i class="fa fa-4x fa-home wow bounceIn text-primary"></i>
                              <h3>The Villa</h3>

                              <p class="text-muted">Have a tour in our beautiful villa.</p>
                              </a>
                          </div>
                      </div>
                      <div class="col-lg-4 col-md-6 text-center">
                          <div class="service-box">
                            <a href="/contents">
                              <i class="fa fa-4x fa-binoculars wow bounceIn text-primary" data-wow-delay=".1s"></i>
                              <h3>The area</h3>

                              <p class="text-muted">Enjoy Tuscany!</p>
                              </a>

                          </div>
                      </div>
                      <div class="col-lg-4 col-md-6 text-center">
                          <div class="service-box">
                            <a href="/guestbooks">
                              <i class="fa fa-4x fa-book wow bounceIn text-primary" data-wow-delay=".3s"></i>
                              <h3>Guestbook</h3>
                              <p class="text-muted">Feel free to leave a message</p>
                            </a>
                          </div>
                      </div>
                  </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="map">
                  <%= render 'contents/location' %>
                </div>
            </div>
        </div>
    </div>
</div>
    <script>
    $('.multi-item-carousel').carousel({
      interval: false
    });
    $('.multi-item-carousel .item').each(function(){
      var next = $(this).next();
      if (!next.length) {
        next = $(this).siblings(':first');
      }
      next.children(':first-child').clone().appendTo($(this));

      if (next.next().length>0) {
        next.next().children(':first-child').clone().appendTo($(this));
      } else {
      	$(this).siblings(':first').children(':first-child').clone().appendTo($(this));
      }
    });
    </script>
</section>
