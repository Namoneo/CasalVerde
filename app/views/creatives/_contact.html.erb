<section id="contact">
        <div class="row">
            <div col-md-4 col-md-offset-4>
                <%= form_for @question do |f| %>
                <div class="row">
                  <div class="col-md-8 col-md-offset-2">
                    <p class="text-center">Please fill out the form below and we will get back to you within 1-2 business days. We look forward to serving you!</p>
                    <div class="form-group">
                      <label for="Name" class="form-label">Name</label>
                      <%= f.text_field :name, class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label for="Email" class="form-label">Email</label>
                      <%= f.text_field :email, class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label for="Question" class="form-label">Question/Remark</label>
                      <%= f.text_area :question, class:"form-control"%>
                    </div>
                  </div>
                </div>
            </div>
          <div class="row">
            <div class="col-md-8 col-md-offset-5">
              <div class="actions">
                <%= f.submit "Submit", class: "btn btn-primary" %>
              </div>
            </div>
        </div>
    </div>
  <% end %>
</section>
